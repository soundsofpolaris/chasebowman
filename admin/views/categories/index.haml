.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:categories, :index)
      %li=link_to pat(:new), url(:categories, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:categories)
    .inner
      %table.table
        %tr
          %th.first=mat(:category, :id)
          %th=mat(:category, :name)
          %th.last="&nbsp;"
        -@categories.each do |category|
          %tr
            %td.first=category.id
            %td=category.name
            %td.last
              =button_to pat(:edit), url(:categories, :edit, :id => category.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:categories, :destroy, :id => category.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")