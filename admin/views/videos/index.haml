.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:videos, :index)
      %li=link_to pat(:new), url(:videos, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:videos)
    .inner
      %table.table
        %tr
          %th.first=mat(:video, :id)
          %th=mat(:video, :video_url)
          %th=mat(:video, :image_url)
          %th=mat(:video, :image_over_url)
          %th=mat(:video, :category)
          %th=mat(:video, :type)
          %th=mat(:video, :index)
          %th.last="&nbsp;"
        -@videos.each do |video|
          %tr
            %td.first=video.id
            %td=video.video_url
            %td=video.image_url
            %td=video.image_over_url
            %td=video.category
            %td=video.type
            %td=video.index
            %td.last
              =button_to pat(:edit), url(:videos, :edit, :id => video.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:videos, :destroy, :id => video.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")